{
    "name": "TASK 1 HK243",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
        "version": "20" // Sử dụng phiên bản Node.js 20
        },
        "ghcr.io/devcontainers/features/git:1": {
        "version": "latest"
        }
    },
    "extensions": [
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "ms-vscode.cpptools-themes",
        "aaron-bond.better-comments",
        "vscode-icons-team.vscode-icons"
    ],
    "forwardPorts": [5173],
    "workspaceFolder": "/workspaces/template",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/template,type=bind",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "postStartCommand": "bash .devcontainer/banner.sh",
    "postCreateCommand": "npm create vite@latest frontend -- --template react-ts && cd frontend && npm install tailwindcss postcss autoprefixer && npx tailwindcss init -p",
    "remoteUser": "root"
}